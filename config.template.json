{
    "production":       false,
    "authentication":   false,
    "auth": {
        "host":     "http://127.0.0.1:9000/auth/auth",
        "token":    "xxx",
        "email":    "xxx@xxx.co.za",
        "appId":    "xxx"
    },
    "localwebserver": {
        "port": 15000
    },
    "mongodb": {
        "url":      "xxx",
        "database": "xxx"
    },
    "logger": {
        "appenders": {
            "docs": {
                "type":         "file",
                "backups":      10,
                "filename":     "./logs/docs.log",
                "absolute":     true,
                "maxLogSize":   102400
            }
        },
        "categories": {
            "default": {
                "appenders": [
                    "docs"
                ],
                "level": "error"
            }
        }
    }
}